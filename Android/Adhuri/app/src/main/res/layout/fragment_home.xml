<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/white">

    <FrameLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:orientation="vertical"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_tab_home"
        app:itemTextColor="@color/bottom_bar"
        app:itemIconTint="@color/bottom_bar">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/bottomSeparator"/>

    </android.support.design.widget.BottomNavigationView>

</RelativeLayout>
