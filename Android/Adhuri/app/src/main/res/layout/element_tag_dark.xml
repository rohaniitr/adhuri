<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    app:cardCornerRadius="12sp">

    <TextView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/tvTag" android:background="@color/black"
        android:textColor="@color/textPureWhite" android:textSize="12sp"
        android:paddingLeft="8sp" android:paddingRight="8sp"
        android:paddingTop="4sp" android:paddingBottom="4sp"
        android:text="@string/sample_tag"/>

</android.support.v7.widget.CardView>