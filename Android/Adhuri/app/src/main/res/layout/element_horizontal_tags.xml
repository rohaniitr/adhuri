<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_marginRight="8sp" android:layout_marginLeft="8sp"
    android:background="@color/black" app:cardCornerRadius="12sp">
    <RelativeLayout
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/lTags">

        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/tvTags" android:text="@string/sample_tag"
            android:textColor="@color/textPureWhite" android:textSize="14sp"
            android:paddingLeft="12sp" android:paddingRight="12sp"
            android:paddingTop="8sp" android:paddingBottom="8sp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="24sp" android:layout_height="24sp"
            android:id="@+id/ivTick" android:background="@drawable/icon_tick"
            android:backgroundTint="@color/white" android:layout_toRightOf="@+id/tvTags"
            android:layout_marginRight="12sp" android:layout_centerVertical="true"/>

    </RelativeLayout>/>
</android.support.v7.widget.CardView>