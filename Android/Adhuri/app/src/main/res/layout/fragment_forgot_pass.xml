<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:fillViewport="true" android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_margin="24sp" android:layout_centerInParent="true"
            android:orientation="vertical">

            <in.rohansarkar.adhuri.View.Utils.TextViewAllura
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" android:id="@+id/tvAppName"
                android:text="adhuri" android:textSize="64sp"
                android:textColor="@color/textBlack"/>

            <LinearLayout
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginTop="32sp" android:orientation="vertical"
                android:layout_marginLeft="24sp" android:layout_marginRight="24sp">

                <LinearLayout
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="16sp" android:layout_height="16sp"
                        android:background="@drawable/icon_email" android:backgroundTint="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:textSize="12sp" android:textColor="@color/textOffBlack"
                        android:text="Email" android:layout_marginLeft="12sp"/>
                </LinearLayout>

                <EditText
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:textSize="16sp" android:textColor="@color/textBlack"
                    android:id="@+id/etEmail" android:inputType="textEmailAddress"
                    android:layout_marginLeft="28sp" android:layout_marginBottom="22sp"/>

                <LinearLayout
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="16sp" android:layout_height="16sp"
                        android:background="@drawable/icon_key" android:backgroundTint="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:textSize="12sp" android:textColor="@color/textOffBlack"
                        android:text="OTP" android:layout_marginLeft="12sp"/>
                </LinearLayout>

                <EditText
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:textSize="16sp" android:textColor="@color/textBlack"
                    android:id="@+id/etOtp" android:inputType="numberDecimal"
                    android:layout_marginLeft="28sp" android:layout_marginBottom="22sp"/>

                <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:id="@+id/tvResendOtp" android:layout_marginLeft="28sp"
                    android:textSize="13sp" android:textColor="@color/textBlack"
                    android:text="RESEND OTP?"/>

                <Button
                    android:layout_width="140sp" android:layout_height="wrap_content"
                    android:id="@+id/bSubmit" android:background="@drawable/login_button"
                    android:layout_marginTop="84sp" android:layout_gravity="center_horizontal"
                    android:text="SEND OTP" android:textColor="@color/textWhite"
                    android:textSize="16sp" android:elevation="12sp"/>

                <Button
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:id="@+id/bLogin" android:background="@drawable/login_switch_button"
                    android:layout_marginTop="32sp" android:layout_gravity="center_horizontal"
                    android:text="@string/login_text" android:textColor="@color/textBlack"
                    android:textSize="13sp"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>