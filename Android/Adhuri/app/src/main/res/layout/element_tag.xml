<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingTop="8sp" android:paddingBottom="8sp">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        app:cardCornerRadius="12sp" android:layout_centerHorizontal="true"
        android:id="@+id/cvTag">
        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/tvTag" android:background="@color/black"
            android:textColor="@color/textPureWhite" android:textSize="18sp"
            android:paddingLeft="12sp" android:paddingRight="12sp"
            android:paddingTop="8sp" android:paddingBottom="8sp"
            android:text="@string/sample_tag"/>
    </android.support.v7.widget.CardView>
    <ImageView
        android:layout_width="24sp" android:layout_height="24sp"
        android:id="@+id/ivSelected" android:layout_toRightOf="@+id/cvTag"
        android:background="@drawable/icon_tick" android:backgroundTint="@color/blueTint"
        android:layout_centerVertical="true" android:layout_marginLeft="4sp"/>
</RelativeLayout>